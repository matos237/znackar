<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/attributionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="#AAFFFFFF"
        android:padding="8dp">

        <TextView
            android:id="@+id/attributionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mapa © Freemap Slovakia, dáta © prispievatelia OpenStreetMap, reliéf © ÚGKK SR"
            android:textSize="12sp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#AAFFFFFF"
        android:padding="8dp">

        <Button
            android:id="@+id/btnWaypoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waypoint"
            android:layout_marginLeft="16dp"/>

        <Button
            android:id="@+id/btnCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center"
            android:layout_marginLeft="16dp"/>

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ukončiť"
            android:layout_marginLeft="16dp" />
    </LinearLayout>

</RelativeLayout>
